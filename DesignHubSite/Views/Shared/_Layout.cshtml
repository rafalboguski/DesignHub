<!DOCTYPE html>
<html data-ng-app="AngularAuthApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DesignHub</title>
    @Scripts.Render("~/bundles/modernizr")


    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>


    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="~/Content/bower_components/materialize/dist/css/materialize.min.css" media="screen,projection" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />


    <link rel="stylesheet" href="~/content/site.css" />
    <link rel="stylesheet" href="~/content/PartialCss/projects.css" />
    <link rel="stylesheet" href="~/content/PartialCss/sidebar.css" />


</head>
<body>
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="~/Content/bower_components/materialize/dist/js/materialize.js"></script>


    <div ng-controller="indexController" data-ng-init="init('@User.Identity.IsAuthenticated')">





        <div id="sidebar">

            <img class="center" src="~/Content/img/logo_tmp.png" width="180"
                 style="
                        margin-top:10px;
                        margin-bottom:10px;
                        padding-top:20px;
                        padding-bottom:30px;

                        " />
            <!--@Html.ActionLink("DesignHub", "Index", "Home", null, new { @class = "" })-->
            <!--<a  class="btn-block"
               href="#/projects"
               ng-class="{'sidebar-active-el':current_page === 'projects'}"
               ng-click="current_page = 'projects'">
                My Projects Gallery
            </a>   -->
            {{current_page}}

        

            <div onClick="$('#expand').trigger('click');" class="btn btn-lg">Click</div>
       


            <ul class="collapsible" data-collapsible="accordion">
                <li>
                    <div id="expand" href="#/projects" ng-click="href('/projects');alert('fag');"
                         class="waves-effect waves-light collapsible-header">
                        <i class="material-icons">filter_drama</i>
                        My Projects
                    </div>
                    <div class="collapsible-body">
                        <p>Those are your projecst. Go ahead pick one or add new</p>
                    </div>
                </li>
                <li>
                    <a id="aSettings" href="#/settings" ng-click="current_page = 'Settings'"
                       class="waves-effect waves-light collapsible-header">
                        <i class="material-icons">place</i>
                        Settings
                    </a>
                    <div class="collapsible-body"><p>Lorem ipsum dolor sit amet.</p></div>
                </li>
                <li>
                    <div id="aTmp" ng-click="current_page = 'Tmp'"
                         class="waves-effect waves-light collapsible-header">
                        <i class="material-icons">whatshot</i>
                        Messages
                    </div>
                    <div class="collapsible-body"><p>Lorem ipsum dolor sit amet.</p></div>
                </li>
            </ul>




            @Html.Partial("_LoginPartial")






        </div>

        <div id="content">

            <div style="padding:0px;">
                @RenderBody()

                <div data-ng-view=""></div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")

    <!-- 3rd party libraries -->
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular-route.min.js"></script>
    <script src="~/Scripts/ng-file-upload-shim.min.js"></script>
    <script src="~/Scripts/ng-file-upload.min.js"></script>
    <!-- Load app main script -->
    <script src="~/Frontend/app.js"></script>
    <!-- Load services -->
    <script src="~/Frontend/Projects/projectsService.js"></script>
    <!-- Load controllers -->
    <script src="~/Frontend/controllers/indexController.js"></script>

    <script src="~/Frontend/Projects/projectsController.js"></script>



    @RenderSection("scripts", required: false)
</body>
</html>
